{
  "compilerOptions": {
    // Enable latest features
    "lib": ["ES2020", "DOM"],
    "target": "ES2020",
    "module": "ES2020",
    "allowJs": false,
    "composite": true,

    // Bundler mode
    "moduleResolution": "node",

    // Best practices
    "strict": true,
    "skipLibCheck": true,
    "noFallthroughCasesInSwitch": true,

    // Some stricter flags (disabled by default)
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noPropertyAccessFromIndexSignature": false
  }
}
