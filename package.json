    "globals": "^15.3.0",
    "rollup": "2.78.0",
    "rollup-plugin-esbuild": "4.9.3",
    "simple-scaffold": "2.2.1",
    "typescript": "4.7.4",
    "typescript-eslint": "^7.10.0"
